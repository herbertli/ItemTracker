<!-- Add Location Modal Content -->
<div id="add-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="add-modalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="gridSystemModalLabel">Add a Location</h4>
            </div>
            <form>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="locationTitle">Location Title: </label>
                        <input type="text" id="locationTitle" placeholder="Title" class="form-control"
                               name="locationTitle">
                    </div>
                    <div class="form-group">
                        <label for="locationDesc">Location Description: </label>
                        <input type="text" id="locationDesc" placeholder="Description" class="form-control"
                               name="locationDesc">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal" id="addLocation"
                            type="submit" name="action">
                        Submit<i class="material-icons right">chevron_right</i>
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Close<i class="material-icons right">cancel</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div id="alert-msg" class="col-md-10 col-md-offset-1 ">
        {{#if message}}
            <div class="alert alert-danger fade in alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true"><i class="material-icons">clear</i></span>
                </button>
                <strong>Error!</strong> {{message}}
            </div>
        {{/if}}
    </div>
    <div class="col-md-10 col-md-offset-1">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" href="#collapseOne" aria-expanded="true"
                           aria-controls="collapseOne">
                            <i class="material-icons">dashboard</i>
                            Dashboard
                        </a>
                        <!-- Add Location Modal Trigger -->
                        <a class="pull-right" href="#" data-toggle="modal" data-target="#add-modal">
                            <i class="material-icons">add</i>
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body" id="graph">
                    </div>
                </div>
            </div>
            {{#each user.locations}}
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading{{slug}}">
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" href="#collapse{{slug}}"
                               aria-expanded="false" aria-controls="collapse{{slug}}">
                                <i class="material-icons">home</i>{{title}}
                                <a class="pull-right" href="/detail/{{title}}">
                                    <i class="material-icons">arrow_forward</i>
                                </a>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse{{slug}}" class="panel-collapse collapse" role="tabpanel"
                         aria-labelledby="heading{{slug}}">
                        <div class="panel-body">
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://d3js.org/d3.v4.min.js"></script>
<script src="/js/dashboard.js"></script>
